    {%- if translation[0] == page.lang -%}
        {%- assign result = translation[1][page.lang][include.id] -%}
    {%- endif -%}
{%- endfor -%}
{%- if result != blank -%}
    {{- result -}}
{%- else -%}
    {%- for translation in site.data.translations -%}
        {%- if translation[0] == 'en' -%}
            {{- translation[1]['en'][include.id] -}}
        {%- endif -%}
    {%- endfor -%}
{%- endif -%}
